# Production Environment Variables
# Copy this file to .env and fill in your production values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secure-production-secret-key-here-change-this-immediately
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Settings
DB_NAME=geisp_prod
DB_USER=geisp_user
DB_PASSWORD=your-secure-database-password-change-this
DB_HOST=postgres
DB_PORT=5432

# Frontend Settings
REACT_APP_API_URL=https://yourdomain.com/api

# Optional: Email Settings (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Optional: AWS S3 Settings (for media files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-west-2

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True 